<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/custom_bg_1">


    <TextView
        android:visibility="invisible"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:fontFamily="@font/dream_orphans"
        android:text="@string/hobarb"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll1_login"
        android:layout_margin="12dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:id="@+id/button_otp_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="4dp"
            android:background="@drawable/custom_button_border"
            android:elevation="6dp"

            android:fontFamily="@font/averia_libre"
            android:text="Get OTP"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:letterSpacing="0.1"/>

        <Button

            android:id="@+id/button_login_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="4dp"
android:visibility="invisible"
            android:background="@drawable/custom_button_filled"
            android:elevation="6dp"

            android:fontFamily="@font/averia_libre"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/ll0_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <EditText

            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:id="@+id/editText_name_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:hint="Enter a username"
            android:visibility="visible"

            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"/>



        <EditText
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:id="@+id/editText_phone_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="phone"
            android:padding="10dp"
            android:hint="Enter your phone number"
            android:visibility="visible"

            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"/>


        <EditText
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:id="@+id/editText_otp_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="phone"
            android:padding="10dp"
            android:hint="Enter the OTP"
            android:visibility="invisible"

            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"/>
        <EditText
            android:id="@+id/editText_email_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:hint="Enter your email address"
            android:visibility="gone"

            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"/>

        <EditText
            android:id="@+id/editText_password_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:padding="10dp"
            android:hint="Enter your password"
            android:visibility="gone"

            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

</RelativeLayout>